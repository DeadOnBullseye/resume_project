$primary-background: url(texture.png)
$primary-color: rgba(66, 66, 66, 1)
$primary-color-dark: rgba(29, 29, 29, 1)
$secondary-color: #FDE5A9
$secondary-color-dark: #96845a

$display-font: 'Yellowtail', cursive
$heading-font: 'Josefin Sans', sans-serif
$text-font: 'Ubuntu', sans-serif

// *
//   transition: .2s ease-in-out

html
  margin: 0
  padding: 0
  height: 100%
  width: 100%
  color: white

body
  margin: 0
  padding: 0
  height: 100%
  width: 100%
  color: white
  background-color: black

hr
  width: 70%
  margin: 0 0 30px 0
  z-index: 1
  border: 1px solid $secondary-color
  opacity: 0.5

.stop-scrolling
  overflow: hidden

.filler
  flex: 1 1 auto

.header
  display: flex
  align-items: center
  height: 60px
  width: 100%
  position: fixed
  z-index: 999
  padding: 20px 0

a
  position: relative
  text-decoration: none
  color: white
  padding: 5px 0
  margin-right: 35px
  font-family: $text-font
  font-size: 1em
  user-select: none
  &:hover
    color: white
  &:before
    content: ""
    position: absolute
    width: 100%
    height: 2px
    bottom: 0
    left: 0
    background-color: $secondary-color
    visibility: hidden
    -webkit-transform: scaleX(0)
    transform: scaleX(0)
    -webkit-transition: all 0.3s ease-in-out 0s
  &:hover:before, &.active:before
    visibility: visible
    -webkit-transform: scaleX(1)
    transform: scaleX(1)

.header__left, .header__right
  display: flex

.logo
  margin-left: 35px
  font-family: $display-font
  font-size: 2em
  color: $secondary-color
  transition: .4s ease-in-out
  overflow: visible
  user-select: none
  cursor: pointer

.header .logo:hover:before
  visibility: hidden
  -webkit-transform: scaleX(0)
  transform: scaleX(0)

.menu
  transform: translateY(-150%)
  position: fixed
  z-index: 999
  height: 100%
  width: 100%
  background-image: $primary-background
  transition: .2s ease-in-out
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  a
    font-size: 1.5em
    margin: 10px 0

.menu__click
  transform: translateY(0)

.menu-btn
  width: 25px
  height: 20px
  margin: 10px 15px 10px 0
  position: relative
  cursor: pointer
  display: none
  padding: 0
  z-index: 999
  span
    background-color: #fff
    position: absolute
    border-radius: 2px
    transition: 0.3s cubic-bezier(0.8, 0.5, 0.2, 1.4)
    width: 100%
    height: 4px
    &:nth-child(1)
      top: 0
      left: 0
    &:nth-child(2)
      top: 8px
      left: 0
    &:nth-child(3)
      bottom: 0
      left: 0
  &:not(.menu-btn__click):hover span
    &:nth-child(1), &:nth-child(2), &:nth-child(3)
      transform: scaleX(1)
      left: 0

.menu-btn__click span
  &:nth-child(1)
    top: 8px
    background-color: $secondary-color
  &:nth-child(2)
    transform: scale(0)
  &:nth-child(3)
    transform: scale(0)
    top: 8px
    left: 0

.hero-container
  display: flex
  justify-content: center
  align-items: center
  position: relative
  height: 100%
  width: 100%
  background: linear-gradient(to bottom right, #00324D, #DF1825 95%)

// #00324D Blue
// #DF1825 Red
// #FDE5A9 Cream

.hero-container_content
  width: 100%
  height: 100%
  display: flex
  justify-content: center
  align-items: center
  text-align: center
  flex-direction: column

.hero-container_content__heading
  padding: 0
  margin: 0 0 -10px 0
  font-family: $display-font
  font-size: 7em
  font-weight: 100
  margin-top: auto
  user-select: none
  z-index: 2

.hero-container_content__text
  padding: 0
  margin: 0 0 50px 0
  font-family: $text-font
  font-size: 1em

.hero-container_strip
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  text-align: center
  width: 100%
  background-color: rgba(0, 0, 0, 0.5)
  height: auto
  margin: auto 0 0 0
  padding: 40px 0

.btn
  display: flex
  justify-content: center
  align-items: center
  text-align: center
  border-radius: 19px
  height: 38px
  width: 100%
  max-width: 200px
  border: 1px solid white
  font-family: $text-font
  font-size: 1em
  transition: .2s ease-in-out
  cursor: pointer
  color: white
  &:hover
    opacity: 1
    background-color: white
    color: #333

#contact-page__btn
  width: 38px
  transform: rotate(90deg)
  flex-direction: column
  span
    width: 16px
    height: 2px
    background-color: white
    border-radius: 2px
    &:nth-child(1)
      transform: rotate(35deg) translateY(-4px)
    &:nth-child(2)
      transform: rotate(-35deg) translateY(4px)
  &:hover span
    background-color: #333

.track
  margin-top: auto
  height: 70px
  width: 100%
  display: flex
  justify-content: center
  align-items: center

.line
  height: 20px
  width: 2px
  background-color: white
  align-self: flex-start
  opacity: 0
  transition: .2s ease-in-out
  animation-iteration-count: 1
  animation-timing-function: ease-in-out

.scrollDown
  animation-name: scrollDown
  animation-duration: 2.3s
  animation-iteration-count: infinite
  animation-delay: 5s

@keyframes scrollDown
  0%
    opacity: 0
  40%
    opacity: 1
  50%
    transform: translateY(120%)
  75%
    opacity: 1
  100%
    transform: translateY(120%)
    opacity: 0

.main
  width: auto
  height: auto
  margin: 0
  padding: 0
  position: relative
  background-image: $primary-background
  box-shadow: 0 5px 50px rgba(255, 255, 255, 0.2)

.row
  display: flex
  justify-content: center
  align-items: center
  width: 100%
  position: relative
  background-color: transparent

.flex-column
  flex-direction: column
  justify-content: center

.flex
  display: flex
  align-items: center

.content
  max-width: 1300px
  width: 100%
  height: auto
  padding: 60px 20px

.content__heading
  font-family: $heading-font
  font-size: 2em
  // text-transform: uppercase
  padding-left: 35px
  border-left: 2px solid $secondary-color

.content__text
  width: 100%
  font-family: $text-font
  font-size: 1em
  margin-top: 25px
  margin-bottom: 15px

.text-btn
  transition: .2s ease-in-out

.text-btn:hover
  color: $secondary-color

.text-btn:hover:before
  visibility: hidden
  -webkit-transform: scaleX(0)
  transform: scaleX(0)

.footer
  width: 100%
  display: flex
  text-align: center
  position: relative
  background-color: $primary-color-dark
  font-family: $text-font
  border-top: 2px solid $secondary-color

.footer-hr
  width: 70%
  margin: 30px 50px
  z-index: 1
  border: 1px solid $primary-color
  opacity: 0.7

.footer-content
  width: 100%
  display: flex
  justify-content: center
  align-items: center
  align-content: center
  text-align: center
  flex-direction: column

.footer-content__section-1
  display: flex
  align-content: center
  align-items: center
  justify-content: center
  text-align: center
  width: 70%
  height: 100%
  padding-right: 34px
  a
    margin: 17px
    font-size: 1.2rem
    color: black
    &:hover:before, &.active:before
      visibility: visible
      -webkit-transform: scaleX(0)
      transform: scaleX(0)

.fab
  width: 20px
  padding: 15px
  margin: 0
  border-radius: 50%
  background-color: $secondary-color-dark
  color: white
  transition: .2s ease-in-out

.fas
  width: 20px
  padding: 15px
  margin: 0
  border-radius: 50%
  background-color: $secondary-color-dark
  color: white
  transition: .2s ease-in-out

.fa-twitter
  &:hover
    background-color: white
    color: #38A1F3

.fa-instagram
  &:hover
    background-color: white
    color: #D12798

.fa-linkedin
  &:hover
    background-color: white
    color: #0077B5

.fa-codepen
  &:hover
    background-color: white
    color: #000

.fa-github
  &:hover
    background-color: white
    color: #333

.fa-envelope
  &:hover
    background-color: white
    color: #D44638

.footer-content__section-2
  display: flex
  flex-direction: row
  text-align: center
  align-content: center
  justify-content: center
  align-items: center
  width: 100%
  height: 100%
  margin-top: 15px

.footer-content__section-3
  display: flex
  flex-direction: row
  text-align: center
  align-content: center
  justify-content: center
  align-items: center
  width: 100%
  height: 100%
  opacity: 0.8
  font-size: .8rem
  padding-right: 34px

.container
  display: flex
  flex-direction: column
  justify-content: center
  height: 100%
  width: 100%
  position: relative

.form
  width: 100%
  height: 100%
  max-height: 100%
  max-width: 30%
  background-image: $primary-background
  position: absolute
  align-self: flex-start
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  box-shadow: 5px -5px 5px rgba(0, 0, 0, 0.2)
  transition: .4s ease-in-out

form
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  width: 80%
  input
    outline: none
    width: 100%
    padding: 5px 0 10px 0
    margin: 10px 0
    font-family: $text-font
    font-size: 1em
    background-color: transparent
    color: white
    border: none
    border-bottom: 2px solid white
    border-bottom-left-radius: 5px
    border-bottom-right-radius: 5px
    opacity: 0.5
    transition: .3s ease-in-out
    &::placeholder
      opacity: 0.5
    &:focus
      opacity: 1
      &::placeholder
        opacity: 1
        color: white
  input[type="submit"]
    display: flex
    align-items: center
    justify-content: center
    text-align: center
    border: 2px solid white
    border-radius: 19px
    padding: 10px
    margin-top: 20px
    height: 38px
    width: 100%
    cursor: pointer
    &:hover
      opacity: 1
      background-color: white
      color: #333
  .options
    margin-top: 80px
    width: 100%
    font-size: 1em
    display: flex
    justify-content: center
    align-items: center
    a
      margin: 0
      width: 49%
      min-width: 49%
      padding: 0
      text-align: center
      cursor: default
      span
        cursor: pointer
        transition: .2s ease-in-out
      &:nth-child(1)
        border-right: 1px solid white
        padding-right: 20px
      &:nth-child(2)
        border-left: 1px solid white
        padding-left: 20px

form .options a span:hover
  color: $secondary-color

form .options a:hover:before
  visibility: hidden
  -webkit-transform: scaleX(0)
  transform: scaleX(0)

.form__heading
  align-self: flex-start
  text-align: left
  font-family: $heading-font
  font-size: 2em
  padding-left: 35px
  border-left: 2px solid $secondary-color
  margin-bottom: 15px

.form__text
  font-family: $text-font
  font-size: 1em
  font-style: italic
  margin-bottom: 80px
  align-self: flex-start
  text-align: left

.italic
  font-style: italic

.menu__click___logo
  visibility: visible !important
  opacity: 1 !important

.image-slider
  position: relative
  width: 100%
  max-width: 800px
  height: 100%
  max-height: 400px
  border-radius: 5px
  overflow: hidden
  display: flex
  flex-direction: column
  justify-content: flex-end
  user-select: none
  box-shadow: 0 0 40px rgba(255, 255, 255, 0.05)

.slide
  display: none
  width: auto
  height: 100%
  min-height: 400px
  flex-direction: column
  justify-content: flex-end
  cursor: pointer
  background-color: transparent
  transition: .4s ease-in-out
  background-size: cover
  background-repeat: no-repeat

.slide:hover > .image
  filter: grayscale(0%)

.image-content
  background-color: rgba(0, 0, 0, 0.8)
  padding: 20px 20px
  width: auto
  max-width: 300px
  height: auto
  position: relative
  border-top-right-radius: 5px

.image
  min-height: 100%
  height: 100%
  border-radius: 5px
  width: auto
  position: relative
  background-size: cover
  filter: grayscale(100%)
  top: 34.3375%
  transition: .4s ease-in-out

.prev, .next
  cursor: pointer
  position: absolute
  top: 50%
  width: auto
  margin-top: -22px
  padding: 16px
  color: white
  font-weight: bold
  font-size: 18px
  transition: .6s ease-in-out
  border-radius: 0 3px 3px 0
  &:hover
    background-color: rgba(0, 0, 0, 0.8)

.next
  right: 0
  border-radius: 3px 0 0 3px

.dot-container
  text-align: center
  align-self: flex-end
  margin-top: -40px
  position: absolute
  margin: -10px 15px 10px -15px
  width: auto
  display: flex

.dot
  cursor: pointer
  height: 7px
  width: 7px
  margin: 0 4px
  border-radius: 50%
  background-color: #bbb
  display: inline-block
  transition: background-color .6s ease-in-out
  &.active
    background-color: $secondary-color
  &:hover
    background-color: $secondary-color

.featured
  position: relative
  width: 100%
  max-width: 460px
  height: 400px
  border-radius: 5px
  margin-left: 40px
  overflow: hidden
  display: flex
  flex-direction: column
  justify-content: flex-end
  user-select: none
  box-shadow: 0 0 40px rgba(255, 255, 255, 0.05)
  cursor: pointer

.featured:hover > .image
  filter: grayscale(0%)

.fade
  animation-name: fade
  animation-duration: 1.5s

@keyframes fade
  from
    opacity: 0
  to
    opacity: 1

@media screen and (min-width: 1600px)
  #home-page
    background-image: url(cutout.png)
    background-size: 35%
    background-repeat: no-repeat
    background-position: center bottom

@media screen and (max-width: 1200px)
  .form
    width: 100%
    max-width: 400px
    height: 100%
    max-height: 550px
    align-self: center
    border-radius: 10px

  .content
    flex-direction: column
    justify-content: center
    align-items: center

  .image-slider
    margin: 0 0 40px 0

  .featured
    width: 100%
    max-width: 800px
    margin: 0

@media screen and (max-width: 800px)
  html, body
    min-width: 300px

  .hero-container
    background-attachment: scroll
    background-position: center

  .header
    background-color: transparent !important
    box-shadow: 0 3px 5px rgba(0, 0, 0, 0) !important
    padding: 0 !important
    a
      display: none
    .logo
      display: inline-block
      visibility: hidden
      opacity: 0
      margin-left: 15px

  .menu-btn
    display: inline-block

  .hero-container_content__heading
    font-size: 5em

@media screen and (max-width: 600px)
  .hero-container_content
    padding: 20px

  .hero-container_content__heading
    font-size: 4em

@media screen and (max-width: 400px)
  .form
    max-height: 100%
    border-radius: 0

  form
    width: 90%

  .btn
    max-width: 100%
