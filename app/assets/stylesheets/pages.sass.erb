// Imports

@import url('https://fonts.googleapis.com/css?family=Josefin+Sans|Ubuntu|Yellowtail')

// Imports END

// Color Swatch

$primary-background: url(texture.png)

$primary-color: rgba(66, 66, 66, 1)
$primary-color-dark: rgba(29, 29, 29, 1)

$secondary-color: #FDE5A9
$secondary-color-dark: #96845a

$blue: #00324D
$red: #DF1825

// Color Swatch END

// Fonts

$display-font: 'Yellowtail', cursive
$heading-font: 'Josefin Sans', sans-serif
$text-font: 'Ubuntu', sans-serif

// Fonts END

// Body Elements and Containers

html
  margin: 0
  padding: 0
  height: 100%
  width: 100%
  overflow-x: hidden

body
  font-size: 1rem
  color: white
  background-color: black
  width: 100%
  height: 100%
  margin: 0
  padding: 0

.main
  width: auto
  height: auto
  margin: 0
  padding: 0
  position: relative
  background-image: $primary-background
  box-shadow: 0 5px 50px rgba(255, 255, 255, 0.2)

.row
  display: flex
  justify-content: center
  align-items: center
  width: 100%
  position: relative
  background-color: transparent

.content
  max-width: 1320px
  width: 100%
  height: auto
  padding: 60px 60px

.flex-column
  flex-direction: column
  justify-content: center

.flex
  display: flex
  align-items: center

// Body Elements and Containers END

// Hero Container

.hero-container
  display: flex
  justify-content: center
  align-items: center
  position: relative
  height: 100%
  width: 100%
  background: linear-gradient(to bottom right, $blue, $red 95%)

.hero-container_content
  width: 100%
  height: 100%
  display: flex
  justify-content: center
  align-items: center
  text-align: center
  flex-direction: column

.hero-container_content__heading
  padding: 0
  margin: 0 0 -10px 0
  font-family: $display-font
  font-size: 7em
  font-weight: 100
  margin-top: auto
  user-select: none
  z-index: 2

.hero-container_content__text
  padding: 0
  margin: 0 0 50px 0
  font-family: $text-font
  font-size: 1em

.hero-container_strip
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  text-align: center
  width: 100%
  background-color: rgba(0, 0, 0, 0.5)
  height: auto
  margin: auto 0 0 0
  padding: 40px 0

// Hero Container END

// Footer

// Footer END

// Other Elements

.btn
  display: flex
  justify-content: center
  align-items: center
  text-align: center
  border-radius: 19px
  height: 38px
  width: 100%
  max-width: 200px
  border: 1px solid white
  font-family: $text-font
  font-size: 1em
  transition: .2s ease-in-out
  cursor: pointer
  color: white
  &:hover
    opacity: 1
    background-color: white
    color: #333

.track
  margin-top: auto
  height: 70px
  width: 100%
  display: flex
  justify-content: center
  align-items: center

.line
  height: 20px
  width: 2px
  background-color: white
  align-self: flex-start
  opacity: 0
  transition: .2s ease-in-out
  animation-iteration-count: 1
  animation-timing-function: ease-in-out

.stop-scrolling
  overflow: hidden

.filler
  flex: 1 1 auto

// Other Elements END

// Fonts Styles, Headings, and Text Elements

a
  text-decoration: none
  color: #fff

h1
  text-align: center

hr
  width: 70%
  margin: 0 0 30px 0
  z-index: 1
  border: 1px solid $secondary-color
  opacity: 0.5

.content__heading
  font-family: $heading-font
  font-size: 2em
  padding-left: 35px
  border-left: 2px solid $secondary-color

.content__text
  width: 100%
  font-family: $text-font
  font-size: 1em
  margin-top: 25px
  margin-bottom: 15px

.italic
  font-style: italic

// Fonts Styles, Headings, and Text Elements END

// Image Slider and Featured

.slider
  display: flex
  justify-content: center
  align-items: center
  width: 100%
  max-width: 800px
  height: 100%
  overflow: hidden
  padding: 0

.slider-outer
  overflow: hidden
  width: 100%
  max-width: 800px
  box-shadow: 0 0 40px rgba(255, 255, 255, 0.05)
  padding: 0

.slider-inner
  width: 100%
  max-width: 800px
  height: 400px
  position: relative
  padding: 0
  overflow: hidden
  float: center
  border-radius: 5px

.slide
  img
    width: 110%
    height: 110%
    position: absolute
    transition: all .5s ease-in-out
    filter: grayscale(70%)
    background-size: cover
    background-repeat: no-repeat
    background-position: center
    overflow: hidden
  &:hover > img
    filter: grayscale(0%)
    transition: all .5s ease-in-out

.dot-container
  position: absolute
  margin: 0
  padding: 3px
  display: flex
  z-index: 100
  bottom: 0
  right: 0
  background-color: rgba(0, 0, 0, 0.7)
  border-top-left-radius: 5px

.dot
  height: 8px
  width: 8px
  background-color: #bbb
  margin: 3px
  border-radius: 5px
  transition: all 1s ease-in-out
  &.active
    background-color: $secondary-color
    transition: all 1s ease-in-out

.slide-content
  background-color: rgba(0, 0, 0, 0.8)
  padding: 20px 20px
  width: 100%
  max-width: 300px
  height: auto
  position: absolute
  border-top-right-radius: 5px
  bottom: 0
  left: 0

.slide-content__text
  display: none
  opacity: 0
  transition: all 1s ease-in-out
  &.active
    display: inline-block
    opacity: 1
    transition: all 1s ease-in-out

.featured
  position: relative
  width: 100%
  max-width: 460px
  height: 400px
  border-radius: 5px
  margin-left: 40px
  overflow: hidden
  display: flex
  flex-direction: column
  justify-content: flex-end
  user-select: none
  box-shadow: 0 0 40px rgba(255, 255, 255, 0.05)
  cursor: pointer

.image-content
  background-color: rgba(0, 0, 0, 0.8)
  padding: 20px 20px
  width: 100%
  max-width: 300px
  height: auto
  position: absolute
  border-top-right-radius: 5px
  bottom: 0
  left: 0

.image
  height: 420px
  bottom: 0
  img
    width: 110%
    height: 110%
    position: absolute
    transition: all .5s ease-in-out
    filter: grayscale(70%)
    background-size: cover
    background-repeat: no-repeat
    background-position: center
    overflow: hidden

.featured
  > .image
    filter: grayscale(80%)
  &:hover > .image
    filter: grayscale(0%)

// Image Slider and Featured END

// Animations
@keyframes scrollDown
  0%
    opacity: 0

  40%
    opacity: 1

  50%
    transform: translateY(120%)

  75%
    opacity: 1

  100%
    transform: translateY(120%)
    opacity: 0


.scrollDown
  animation-name: scrollDown
  animation-duration: 2.3s
  animation-iteration-count: infinite
  animation-delay: 5s

// Animations END

// Media Queries
@media screen and (min-width: 1600px)
  #home-page
    background-image: url(/assets/cutout.png)
    background-size: 35%
    background-repeat: no-repeat
    background-position: center bottom

@media screen and (max-width: 1200px)
  .content
    flex-direction: column
    justify-content: center
    align-items: center
    max-width: 800px
  .featured
    margin: 0
    width: 100%
    max-width: 800px
  .slider
    margin: 0 0 40px 0

@media screen and (max-width: 800px)
  .hero-container
    background-attachment: scroll
    background-position: center
  .hero-container_content__heading
    font-size: 5em

@media screen and (max-width: 600px)
  .hero-container_content
    padding: 20px
  .hero-container_content__heading
    font-size: 4em
  .content
    padding: 60px 30px
  .slide-content, .image-content
    min-width: 100%
    border-top-right-radius: 0px
  .dot-container
    display: none

@media screen and (max-width: 450px)
  .hero-container_content__heading
    font-size: 2.5em

@media screen and (max-width: 400px)
  .content
    padding: 40px 20px
  .slider, .slider-inner, .slider-outer
    height: 320px
  .featured
    max-height: 320px

// Media Queries END
