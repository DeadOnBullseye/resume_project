$primary-background: url(texture.png)
$primary-color: rgba(66, 66, 66, 1)
$primary-color-dark: rgba(29, 29, 29, 1)
$secondary-color: #DF1825
$secondary-color-dark: rgba(83, 56, 117, 1)

$display-font: 'Yellowtail', cursive
$heading-font: 'Josefin Sans', sans-serif
$text-font: 'Ubuntu', sans-serif

html
  margin: 0
  padding: 0
  height: 100%
  width: 100%
  color: white

body
  margin: 0
  padding: 0
  height: 100%
  width: 100%
  color: white
  background-color: black

.stop-scrolling
  overflow: hidden

.filler
  flex: 1 1 auto

.header
  display: flex
  align-items: center
  height: 60px
  width: 100%
  position: fixed
  z-index: 999
  padding: 20px 0

a
  position: relative
  text-decoration: none
  color: white
  padding: 5px 0
  margin-right: 35px
  font-family: $text-font
  font-size: 1em
  user-select: none
  &:hover
    color: white
  &:before
    content: ""
    position: absolute
    width: 100%
    height: 2px
    bottom: 0
    left: 0
    background-color: white
    visibility: hidden
    -webkit-transform: scaleX(0)
    transform: scaleX(0)
    -webkit-transition: all 0.3s ease-in-out 0s
  &:hover:before, &.active:before
    visibility: visible
    -webkit-transform: scaleX(1)
    transform: scaleX(1)

.header__left, .header__right
  display: flex

.logo
  margin-left: 35px
  font-family: $display-font
  font-size: 2em
  color: white
  transition: .4s ease-in-out
  overflow: visible
  user-select: none

.header .logo:hover:before
  visibility: hidden
  -webkit-transform: scaleX(0)
  transform: scaleX(0)

.menu
  transform: translateY(-150%)
  position: fixed
  z-index: 999
  height: 100%
  width: 100%
  background-image: $primary-background
  transition: .2s ease-in-out
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  a
    font-size: 1.5em
    margin: 10px 0

.menu__click
  transform: translateY(0)

.menu-btn
  width: 25px
  height: 20px
  margin: 10px 15px 10px 0
  position: relative
  cursor: pointer
  display: none
  padding: 0
  z-index: 999
  span
    background-color: #fff
    position: absolute
    border-radius: 2px
    transition: 0.3s cubic-bezier(0.8, 0.5, 0.2, 1.4)
    width: 100%
    height: 4px
    &:nth-child(1)
      top: 0
      left: 0
    &:nth-child(2)
      top: 8px
      left: 0
    &:nth-child(3)
      bottom: 0
      left: 0
  &:not(.menu-btn__click):hover span
    &:nth-child(1), &:nth-child(2), &:nth-child(3)
      transform: scaleX(1)
      left: 0

.menu-btn__click span
  &:nth-child(1)
    top: 8px
    background-color: $secondary-color
  &:nth-child(2)
    transform: scale(0)
  &:nth-child(3)
    transform: scale(0)
    top: 8px
    left: 0

.hero-container
  display: flex
  justify-content: center
  align-items: center
  position: relative
  height: 100%
  width: 100%
  background: linear-gradient(to bottom right, #00324D, #DF1825 95%)

// #00324D Blue
// #DF1825 Red
// #FDE5A9 Cream

.hero-container_content
  width: 100%
  height: 100%
  display: flex
  justify-content: center
  align-items: center
  text-align: center
  flex-direction: column
  padding: 80px
  background-image: url(cutout.png)
  background-size: 40%
  background-repeat: no-repeat
  background-position: left bottom

.hero-container_content__heading
  padding: 0
  margin: 0 0 30px 0
  font-family: $display-font
  font-size: 7em
  font-weight: 100
  margin-top: auto
  user-select: none

.hero-container_content__text
  padding: 0
  margin: 0 0 50px 0
  font-family: $text-font
  font-size: 1em

.btn
  display: flex
  justify-content: center
  align-items: center
  text-align: center
  border-radius: 19px
  height: 100%
  max-height: 38px
  width: 100%
  max-width: 200px
  border: 1px solid white
  font-family: $text-font
  font-size: 1em
  transition: .2s ease-in-out
  cursor: pointer
  color: white
  &:hover
    opacity: 1
    background-color: white
    color: #333

.track
  margin-top: auto
  height: 70px
  width: 100%
  display: flex
  justify-content: center
  align-items: center

.line
  height: 20px
  width: 2px
  background-color: white
  align-self: flex-start
  opacity: 0
  transition: .2s ease-in-out
  animation-iteration-count: 1
  animation-timing-function: ease-in-out

.scrollDown
  animation-name: scrollDown
  animation-duration: 2.3s
  animation-iteration-count: infinite
  animation-delay: 5s

@keyframes scrollDown
  0%
    opacity: 0
  40%
    opacity: 1
  50%
    transform: translateY(120%)
  75%
    opacity: 1
  100%
    transform: translateY(120%)
    opacity: 0
