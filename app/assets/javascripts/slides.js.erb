$(document).ready(function() {
  $("#slideshow > div:gt(0)").hide();

  setInterval(function() {
    var nextDot = $('.dot.active').next('.dot-container .dot');
    var nextContent = $('.slide-content__text.active').next('.slide-content .slide-content__text');
    $('#slideshow > .slide:first').fadeOut(1000).next().fadeIn(1000).end().appendTo('#slideshow');

    if(nextDot.length == 0) {
      nextDot = $('.dot-container .dot:first');
    }

    if(nextContent.length == 0) {
      nextContent = $('.slide-content .slide-content__text:first');
    }

    $('.dot.active').removeClass('active');
    nextDot.addClass('active');

    $('.slide-content__text.active').removeClass('active');
    nextContent.addClass('active');
  },  7000);
});ï»¿
