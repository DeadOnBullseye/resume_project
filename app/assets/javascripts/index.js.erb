function onScroll() {
  var nav = document.querySelector('.header');
  addEventListener('scroll', function() {
    if (window.innerWidth > 600) {
      if (document.documentElement.scrollTop > 100) {
        $(nav).css("background-color", "rgba(15,15,15,1)");
        $(nav).css("box-shadow", "0 3px 5px rgba(0,0,0,0.6)");
        $(nav).css("transition", "all .2s ease-out");
        $(nav).css("padding", "0");
        $('.line').removeClass('scrollDown');
      } else {
        $(nav).css("background-color", "rgba(0,0,0,0)");
        $(nav).css("box-shadow", "0 3px 5px rgba(0,0,0,0)");
        $(nav).css("padding", "20px 0");
        $('.line').addClass('scrollDown');
      }
    } else {
      $(nav).css("background-color", "rgba(15,15,15,1)");
      $(nav).css("padding", '0');
      $('.line').removeClass('scrollDown');
    }
  });
}

$('.menu-btn').on('click', event => {
  $(event.currentTarget).toggleClass('menu-btn__click');
  $('.menu').toggleClass('menu__click');
  $('.logo').toggleClass('menu__click___logo');
  $('body').toggleClass('stop-scrolling');
});

$('.grid-btn_1').on('click', event => {
  $('.grid-btn_1').addClass('grid-btn_active');
  $('.grid-btn_2').removeClass('grid-btn_active');
  $('.content').addClass('grid-list');
  $('.content').removeClass('grid');
});

$('.grid-btn_2').on('click', event => {
  $('.grid-btn_2').addClass('grid-btn_active');
  $('.grid-btn_1').removeClass('grid-btn_active');
  $('.content').addClass('grid');
  $('.content').removeClass('grid-list');
});

$(window).resize(function(){
	if ($(window).width() <= 1000){
		$('.content').addClass('grid-list');
    $('.content').removeClass('grid');
	}
});

